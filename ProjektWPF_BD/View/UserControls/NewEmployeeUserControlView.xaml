            <TextBlock Text="Uwagi:"  VerticalAlignment="Center" Width="200" TextAlignment="Center"/>
            <TextBox Width="200" mah:TextBoxHelper.Watermark="Tekst" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Szef:"  VerticalAlignment="Center" Width="200" TextAlignment="Center"/>
            <TextBox Width="200" mah:TextBoxHelper.Watermark="Tekst" />
        </StackPanel>
    </StackPanel>
</UserControl>
